@model IEnumerable<RentalCars.Models.Car>
@{
    ViewBag.Title = "Index";
}

@if (ViewBag.displayMenu == "Yes")
{
    <h1>Welcome Admin. Now you can create user Role.</h1>
    <h3>
        <li>@Html.ActionLink("Manage Role", "Index", "Role")</li>
    </h3>
}
else
{

<div class="car-page">
    @foreach(var car in Model)
    {
        <div class="row">
            <div id="title">

                <a href="@Url.Action("Details", "Users", new { id = @car.Id})"> @car.Name</a>
               
            </div>
            <div id="photo">
               <img src='~/Images/@car.Photo' width="250" height="180" class="center"/> 
            </div>
            <div id="price">
                Price : @car.Price per day
            </div>
            <div>
                  @Html.ActionLink("Rent", "Rent", "Users", new { id = car.Id }, new { @class = "btn btn-primary btn-block" })
            </div>
        </div>
    }
</div>

}