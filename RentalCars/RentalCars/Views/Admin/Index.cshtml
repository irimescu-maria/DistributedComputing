@model IEnumerable<RentalCars.Models.Car>
@{
    /**/

    ViewBag.Title = "Index";
}
<h2>Index</h2>
@Html.ActionLink("New Car", "New", "Admin", new { @class = "btn btn-primary js-new"})
<br />
<br />
@if (Model != null)
{
    if (!Model.Any())
    {
        <text>We don't have any cars yet.</text>
    }
    else
    {
        <table id="cars" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Fabrication Year</th>
                    <th>Motorization</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Name</td>
                        <td>@car.FabricationYear</td>
                        <td>@car.Motorization</td>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = car.Id })</td>
                        <td>
                            <button data-car-id="@car.Id" class="btn-link js-delete">Delete</button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#cars").on("click", " .js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this car ?", function (result) {
                    if (result) {

                        $.ajax({
                            url: "/api/cars/" + button.attr("data-car-id"),
                            method: "DELETE",
                            success: function () {

                                button.parents('tr').fadeOut(function () {
                                    button.remove().draw();
                                });

                                $('#cars').each(function () {
                                    if (button.first('tr').children("td").length < 1) {
                                        $(this).hide();
                                    }
                                });

                            }
                        });
                    }
                });
            });
        });
    </script>
}
